<div class="container">
  <div class="row">
    <h1>Projects</h1>
    <h1 class="pull-right">Portfolio</h1>
  </div>
  <div class="row">
    <%= link_to 'New Project', new_project_path, class: "btn btn-info" %>
  </div>
  <br/>
  <% @projects.each do |project| %>
  <div class="col-sm-4" id="project-item">
      <%= link_to "#{project.name}", project_path(project), id: "project-name" %>
    <div>
      <%= project.description %>

      <%= link_to 'Edit', edit_project_path(project) %>
    </div>
  </div>
  <% end %>
</div>
<br/>